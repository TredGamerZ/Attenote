<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_note2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context="com.infinitequarks.tgz.attenote.NoteActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="10sp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:id="@+id/note_subject"
        android:background="@color/colorPrimaryDark"
        android:text="Subject Name"/>
    <EditText
        android:layout_width="match_parent"
        android:padding="10sp"
        android:textSize="16sp"
        android:id="@+id/note_edit_text_title"
        android:layout_height="wrap_content"
        android:hint="eg : Chapter one"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="10sp"
        android:textSize="20sp"
        android:background="#e9e9e9"
        android:text="Enter Notes"/>

    <EditText
        android:layout_width="match_parent"
        android:padding="10sp"
        android:layout_height="wrap_content"
        android:lines="10"
        android:textSize="16sp"
        android:id="@+id/note_edit_text_note"

        android:hint="-Step 1 enter your notes and that's it :)"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/note_save_button"
        android:text="Save Note"/>


</LinearLayout>
