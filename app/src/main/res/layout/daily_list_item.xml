<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp">

    <!--<Button-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:id="@+id/time_data_set_time"-->
    <!--android:text="Set Time"-->
    <!--android:padding="0sp"-->
    <!--android:layout_below="@+id/time_data_switch"-->
    <!--android:layout_alignParentLeft="true"-->
    <!--android:layout_alignParentStart="true"-->
    <!--android:layout_marginLeft="10dp"-->
    <!--android:layout_marginStart="10dp"/>-->

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Attended   "
        android:id="@+id/daily_list_item_attended"
        android:layout_alignBaseline="@+id/time_data_text_view"
        android:layout_alignBottom="@+id/time_data_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/daily_list_item_end_time"
        android:textSize="18sp"
        android:text="9:30"
        android:layout_below="@+id/daily_list_item_subject"
        android:layout_alignRight="@+id/daily_list_item_subject"
        android:layout_alignEnd="@+id/daily_list_item_subject"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10sp"
        android:id="@+id/daily_list_item_subject"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/daily_list_item_start_time"
        android:text="8:30"
        android:textSize="18sp"

        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/daily_list_item_subject"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/daily_list_item_add_note"
        android:text="Add Notes"
        android:layout_below="@+id/daily_list_item_attended"
        android:layout_alignLeft="@+id/daily_list_item_attended"
        android:layout_alignStart="@+id/daily_list_item_attended"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="To"
        android:id="@+id/textView3"
        android:layout_below="@+id/daily_list_item_subject"
        android:layout_toLeftOf="@+id/daily_list_item_end_time"
        android:layout_toStartOf="@+id/daily_list_item_end_time"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"/>


</RelativeLayout>